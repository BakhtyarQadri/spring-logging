<Configuration>

<Properties>
    <Property name="BASE_PATH">log4j2-masking-interceptor/src/main/resources/logs</Property>
<!--    <Property name="BASE_PATH">${spring:log.base.path}</Property>-->
    <Property name="CONSOLE_PATTERN">%d{dd-MM-yyyy hh:mm:ss.SSS a} %-5level --- [%thread] %logger{36} : %msg%n</Property>
    <Property name="FILE_PATH">${BASE_PATH}/${spring:spring.application.name}-file-appender.log</Property>
    <Property name="FILE_PATTERN">%d{dd-MM-yyyy hh:mm:ss a} %-5level --- [%thread] %logger{36} : %msg%n</Property>
    <Property name="ROLLING_FILE_PATH">${BASE_PATH}/${spring:spring.application.name}-rolling-file-appender-%d{dd-MM-yyyy_hh-mm}-%i.log</Property>
    <Property name="ROLLING_FILE_PATTERN">%d{dd-MM-yyyy hh:mm:ss a} %-5level --- [%thread] %logger{36} : %msg%n</Property>
    <Property name="ROLLING_ARCHIVE_FILE_PATH">${BASE_PATH}/archive/${spring:spring.application.name}-rolling-archive-file-appender-%d{dd-MM-yyyy}-%i.log.gz</Property>
</Properties>

<Appenders>

    <Console name="ConsoleAppender" target="SYSTEM_OUT">
        <PatternLayout pattern="${CONSOLE_PATTERN}"/>
    </Console>

    <File name="FileAppender" fileName="${FILE_PATH}">
        <PatternLayout pattern="${FILE_PATTERN}" />
    </File>

    <RollingFile name="RollingFileAppender"
                 fileName="${ROLLING_FILE_PATH}"
                 filePattern="${ROLLING_ARCHIVE_FILE_PATH}"
                 append="true">
        <PatternLayout pattern="${ROLLING_FILE_PATTERN}"/>
        <Policies>
            <TimeBasedTriggeringPolicy interval="1"/>
        </Policies>
    </RollingFile>

    <Rewrite name="RewriteAppender">
        <CustomRewritePolicy/>
        <AppenderRef ref="ConsoleAppender"/>
        <AppenderRef ref="FileAppender"/>
        <AppenderRef ref="RollingFileAppender"/>
    </Rewrite>

</Appenders>

<Loggers>

    <Root level="INFO">
        <AppenderRef ref="RewriteAppender"/>
    </Root>

    <Logger name="com.example.log4j2-masking-interceptor" level="TRACE" />

</Loggers>

</Configuration>