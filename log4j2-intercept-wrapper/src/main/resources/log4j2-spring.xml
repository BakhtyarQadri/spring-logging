<Configuration>

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <Rewrite name="Rewrite">
            <CustomRewritePolicy/>
            <AppenderRef ref="Console"/>
        </Rewrite>
    </Appenders>

    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="Rewrite"/>
        </Root>
    </Loggers>
</Configuration>